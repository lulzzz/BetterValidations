@section scripts {
	<script src="~/scripts/libraries/angular.js"></script>
	<script src="~/scripts/angular-example.js"></script>
}

<div class="angular-example-controller"
	 ng-app="angularExampleApp"
	 ng-controller="controller as ctrl">

	<h2>Register</h2>
	<h3>Create a new account using the fields below.</h3>

	<script type="text/ng-template" id="angular-input-form-template.html">
		<div class="angular-input-form-container">
			<div class="bv-form-group" data-ng-class="{'error': !!error}">
				<label ng-bind="label"></label>
				<div class="bv-input-container">
					<input ng-model="value"
						   class="form-control"
						   type="{{inputType}}"
						   ng-change="error = null;" />
					<span class="error-text" ng-bind="error"></span>
				</div>
			</div>
		</div>
	</script>

	<div angular-input-form="ctrl.model.userName"
		 label="Username"
		 error="ctrl.errors.UserName"
		 input-type="text"></div>

	<div angular-input-form="ctrl.model.email"
		 label="Email"
		 error="ctrl.errors.Email"
		 input-type="text"></div>

	<div angular-input-form="ctrl.model.password"
		 label="Password"
		 error="ctrl.errors.Password"
		 input-type="password"></div>

	<div angular-input-form="ctrl.model.confirmPassword"
		 label="Confirm Password"
		 error="ctrl.errors.ConfirmPassword"
		 input-type="password"></div>

	<div class="bv-form-group">
		<div class="col-md-12 bv-input-container">
			<button type="submit"
					class="btn btn-default"
					ng-click="ctrl.register()">
				Register
			</button>
		</div>
	</div>
</div>